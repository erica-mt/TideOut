<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/textViewBeachName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome da praia"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Concelho"
            android:textSize="14sp"
            android:textColor="#666666"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="8dp"/>

        <TextView
            android:id="@+id/textViewForecastDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data:"
            android:textSize="14sp"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/textViewSeaTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperatura do mar:"
            android:textSize="14sp"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/textViewWaveDirection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Direção das ondas:"
            android:textSize="14sp"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/textViewWaveHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Altura das ondas:"
            android:textSize="14sp"
            android:textColor="#333333"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
